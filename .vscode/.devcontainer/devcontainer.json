// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"name": "Turtle CPU",
	// Use custom Dockerfile instead of base image
	"dockerFile": "./Dockerfile",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"noVncVersion": "1.2.0"
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		6080
	],
	"runArgs": [
		"--shm-size=1g"
	],
	"portsAttributes": {
		"6080": {
			"label": "desktop"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mshr-h.veriloghdl",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.mypy-type-checker",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"ms-python.debugpy",
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers",
				"GitHub.copilot-chat",
				"ms-python.isort",
				"ms-vscode.hexeditor"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo chown -R vscode:vscode /workspaces && cd /workspaces/turtle-cpu/turtle-toolkit && poetry config virtualenvs.in-project true && poetry config virtualenvs.create true && poetry install && cd /workspaces/turtle-cpu/rtl-toolkit && make setup",
	"remoteUser": "vscode"
}